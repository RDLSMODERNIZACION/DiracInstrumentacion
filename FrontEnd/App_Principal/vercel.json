{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/instrumentacion", "destination": "https://dirac-instrumentacion.vercel.app/instrumentacion" },
    { "source": "/instrumentacion/(.*)", "destination": "https://dirac-instrumentacion.vercel.app/instrumentacion/$1" },

    { "source": "/kpi/(.*)", "destination": "/kpi/$1" },
    { "source": "/infraestructura/(.*)", "destination": "/infraestructura/$1" },

    { "source": "/((?!kpi|infraestructura|instrumentacion|assets|img|favicon\\.ico|robots\\.txt|manifest\\.json).*)", "destination": "/index.html" }
  ]
}
